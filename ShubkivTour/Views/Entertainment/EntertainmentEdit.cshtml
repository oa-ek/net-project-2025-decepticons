@model ShubkivTour.Models.DTO.EntertainmentDTOCreate;
@{
    ViewData["Title"] = "Entertainments edit";
}
<h2>Редагування розваг</h2>

<form asp-controller="Entertainment" asp-action="EntertainmentEdit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">Назва</label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Description">Опис</label>
        <input asp-for="Description" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Зберегти зміни</button>
    <a asp-action="EntertainmentLook" class="btn btn-secondary">Скасувати</a>
</form>
