@model ShubkivTour.Models.Entity.Product

@{
    ViewData["Title"] = "Додавання товару";
}

<link rel="stylesheet" href="~/css/catalogAdd.css" />

<h2>Додати товар</h2>

<form method="post">
    <div class="form-group">
        <label>Назва</label>
        <input type="text" name="Name" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Категорія</label>
        <select name="CategoryProductId" class="form-control" required>
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.Value">@category.Text</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Підкатегорія</label>
        <select name="SubCategoryId" class="form-control">
            @foreach (var subCategory in ViewBag.SubCategories)
            {
                <option value="@subCategory.Value">@subCategory.Text</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Бренд</label>
        <select name="BrandId" class="form-control">
            @foreach (var brand in ViewBag.Brands)
            {
                <option value="@brand.Value">@brand.Text</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Розмір</label>
        <input type="text" name="Size" class="form-control" />
    </div>

    <div class="form-group">
        <label>Колір</label>
        <input type="text" name="Color" class="form-control" />
    </div>

    <div class="form-group">
        <label>Матеріал</label>
        <input type="text" name="Material" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ціна</label>
        <input type="number" name="Price" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Опис</label>
        <textarea name="Description" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Додати</button>
    <a href="@Url.Action("Index", "Catalog")" class="btn btn-secondary">Скасувати</a>
</form>
